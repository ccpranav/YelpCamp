<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
                <div class="invalid-feedback">Title can't be empty !</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="loc">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="loc" required>
                <div class="invalid-feedback">Location can't be empty !</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="image" required>
                <div class="invalid-feedback">Image URL can't be empty !</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" id="price" class="form-control" placeholder="0.00" aria-label="Price"
                        aria-describedby="price-label" name="campground[price]" required>
                    <div class="invalid-feedback">Minimum Price: $10 !</div>

                </div>

            </div>

            <div class=" mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="desc" required></textarea>
                <div class="invalid-feedback">Description can't be empty !</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Submit </button>
            </div>
        </form>
    </div>
</div>