<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" value="<%= camp.title  %>"
                    required>
                <div class="invalid-feedback">Title can't be empty !</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="loc">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="loc"
                    value="<%= camp.location  %>" required>
                <div class="invalid-feedback">Location can't be empty !</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="image" value="<%=camp.image %>"
                    required>
                <div class="invalid-feedback">Image URL can't be empty !</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" id="price" class="form-control" placeholder="0.00" aria-label="Price"
                        aria-describedby="price-label" name="campground[price]" value="<%= camp.price  %>" required>
                    <div class="invalid-feedback">Minimum Price: $10 !</div>
                </div>
            </div>

            <div class=" mb-3">
                <label class="form-label" for="desc">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="desc"
                    required><%= camp.description %>"</textarea>
                <div class="invalid-feedback">Description can't be empty !</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds/<%= camp._id %>" class="btn btn-danger">Back</a>
    </div>
</div>